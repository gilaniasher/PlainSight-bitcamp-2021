{
    "name": "Getting Started Example",
    "description": "Build an Extension!",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [{
        "js": [ "src.js"],
        "css": ["style.css"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "browser_action": {
        "default_icon" : "candle.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "tabCapture",
        "desktopCapture",
        "<all_urls>"
    ]
}